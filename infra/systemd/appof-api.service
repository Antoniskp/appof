[Unit]
Description=Appof API Service
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/srv/appof
Environment=HOME=/var/www
EnvironmentFile=/srv/appof/.env
ExecStart=/usr/bin/pnpm --filter @news/api start
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
